# Development Environment Configuration
# This file contains development-only values and is safe to commit

# Database Configuration
POSTGRES_USER=audiobook_user
POSTGRES_DB=audiobook_db

# Application Settings
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://redis:6379

# TTS API Configuration
TTS_MODEL=bark
TTS_PORT=8000
TTS_DEVICE=cpu
TTS_MEMORY_LIMIT=4g

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# File Storage Paths
BOOKS_PATH=/books
AUDIO_PATH=/audio

# Admin Configuration
ADMIN_USERNAME=admin

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MINUTES=15

# Development Secrets (DO NOT USE IN PRODUCTION)
JWT_SECRET=dev-secret-key-minimum-64-characters-for-proper-security-testing-only
POSTGRES_PASSWORD=dev-audiobook-password-change-for-production
ADMIN_PASSWORD=dev-admin-password-123