# Example Environment Configuration
# Copy this to .env and fill in the values for development
# For production, use the secrets management system

# Database Configuration
POSTGRES_USER=audiobook_user
POSTGRES_DB=audiobook_db
# POSTGRES_PASSWORD - Use secrets system or set for dev only

# Application Settings
NODE_ENV=development
PORT=5000

# JWT Configuration
# JWT_SECRET - Use secrets system or set for dev only (minimum 64 characters)
JWT_EXPIRES_IN=7d

# Database URL (will be built automatically with secrets)
# DATABASE_URL=postgresql://user:password@postgres:5432/audiobook_db

# Redis Configuration
REDIS_URL=redis://redis:6379
# REDIS_PASSWORD - Use secrets system if Redis auth is enabled

# TTS API Configuration
TTS_MODEL=bark
TTS_PORT=8000
TTS_DEVICE=cpu
TTS_MEMORY_LIMIT=4g

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# File Storage Paths
BOOKS_PATH=/books
AUDIO_PATH=/audio

# Admin Configuration
ADMIN_USERNAME=admin
# ADMIN_PASSWORD - Use secrets system or set for dev only (minimum 8 characters)

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MINUTES=15

# External APIs (add your keys)
# OPENAI_API_KEY=your-openai-api-key

# Development Only - Remove in production
# For development, you can set these directly:
# JWT_SECRET=dev-secret-key-minimum-64-characters-for-proper-security-testing
# POSTGRES_PASSWORD=dev-password-123
# ADMIN_PASSWORD=admin-dev-password