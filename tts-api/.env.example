# TTS API Configuration
TTS_PORT=8000
TTS_HOST=0.0.0.0
TTS_MODEL=bark
TTS_DEVICE=cpu

# Audio Configuration
AUDIO_PATH=/audio
AUDIO_QUALITY=standard
SAMPLE_RATE=22050

# Bark TTS Settings
BARK_VOICE_PRESET=v2/en_speaker_6
BARK_TEXT_TEMP=0.7
BARK_WAVEFORM_TEMP=0.7
BARK_USE_GPU=false

# Processing Settings
MAX_CHUNK_LENGTH=200
MAX_TEXT_LENGTH=50000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Resource Limits
MAX_MEMORY_GB=4
MAX_PROCESSING_TIME_MINUTES=10